    ТаблицаТовары = Форма.Элементы.Получить("Товары");
    
    // Добавляем реквизит "СуммаВсегоРегл" в таблицу
    СуммаВсегоРегл = Форма.Элементы.Добавить(
        "СуммаВсегоРегл", 
        Тип("ПолеФормы"), 
        ТаблицаТовары
    );
    СуммаВсегоРегл.ПутьКДанным = "Объект.Товары.СуммаВсегоРегл";
    СуммаВсегоРегл.Свойства.Данные.Тип = Новый ОписаниеТипов("Число", , Новый КвалификаторыЧисла(10, 2));
    
