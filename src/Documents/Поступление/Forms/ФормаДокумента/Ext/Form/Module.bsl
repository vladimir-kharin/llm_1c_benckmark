    ГруппаИтоги = Форма.Элементы.Получить("ГруппаИтоги");
    
    // Добавляем реквизит "ОбщаяСуммаВсегоРегл" в группу
    ОбщаяСуммаВсегоРегл = Форма.Элементы.Добавить(
        "ОбщаяСуммаВсегоРегл", 
        Тип("ПолеФормы"), 
        ГруппаИтоги
    );
    ОбщаяСуммаВсегоРегл.ПутьКДанным = "Объект.ОбщаяСуммаВсегоРегл";
    ОбщаяСуммаВсегоРегл.Свойства.Данные.Тип = Новый ОписаниеТипов("Число", , Новый КвалификаторыЧисла(10, 2));
    
    // Добавляем реквизиты формы документа
    Рекв = Новый Массив;
    Рекв.Добавить(Новый РеквизитФормы("СуммаВсегоРегл", Новый ОписаниеТипов("Число", , Новый КвалификаторыЧисла(10, 2))));
    Рекв.Добавить(Новый РеквизитФормы("Валюта", Новый ОписаниеТипов("СправочникСсылка.Валюты")));
    Рекв.Добавить(Новый РеквизитФормы("КурсыВалют", Новый ОписаниеТипов("Дата", , , Новый КвалификаторыДаты(ЧастиДаты.ДатаВремя))));
    ИзменитьРеквизиты(Рекв);
КонецПроцедуры

